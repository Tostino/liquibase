<?xml version="1.0" encoding="UTF-8"?>
<project name="ResourceRootsTest" basedir="."
		xmlns="antlib:org.apache.tools.ant"
		xmlns:au="antlib:org.apache.ant.antunit"
		xmlns:lb="antlib:liquibase.integration.ant"
		xmlns:db="antlib:liquibase.integration.ant.test">
	
	<tempfile property="temp.dir" prefix="ResourceRootsTest" destDir="${java.io.tmpdir}" />

	<path id="basic-classpath">
		<pathelement path="." />
	</path>

	<property name="jdbc.driver" value="org.h2.Driver" />
	<property name="jdbc.url" value="jdbc:h2:mem:test;DB_CLOSE_DELAY=-1" />
	<property name="db.user" value="sa" />
	<property name="db.password" value="" />

	<property name="column.one" value="new_column_one" />
	<property name="column.two" value="new_column_two" />
	<propertyset id="db-propertyset">
		<propertyref prefix="column" />
	</propertyset>

	<lb:database id="test-db" driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" />

	<lb:changelogparameters id="test-parameters">
		<propertyset refid="db-propertyset" />
	</lb:changelogparameters>

	<target name="setUp">
		<sql driver="${jdbc.driver}" url="${jdbc.url}" userid="${db.user}" password="${db.password}" encoding="UTF-8" src="${liquibase.test.ant.basedir}/sql/h2-setup.sql" />
		<mkdir dir="${temp.dir}" />
	</target>

	<target name="tearDown">
		<sql driver="${jdbc.driver}" url="${jdbc.url}" userid="${db.user}" password="${db.password}" encoding="UTF-8" src="${liquibase.test.ant.basedir}/sql/h2-teardown.sql" />
		<delete dir="${temp.dir}" />
	</target>

	<target name="testWithoutResourceRoots">
		<db:assertTableDoesntExist driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" table="DATABASECHANGELOG" />
		<lb:updateDatabase
				changelogfile="${liquibase.test.ant.basedir}/changelog/simple-changelog.xml">
			<lb:database refid="test-db" />
		</lb:updateDatabase>
		<db:assertTableExists driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" table="DATABASECHANGELOG" />
	</target>

	<target name="testAbsoluteResourceRoots">
		<db:assertTableDoesntExist driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" table="DATABASECHANGELOG" />
		<lb:updateDatabase
				resourceRoots="${liquibase.test.ant.basedir}/changelog"
				changelogfile="simple-changelog.xml">
			<lb:database refid="test-db" />
		</lb:updateDatabase>
		<db:assertTableExists driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" table="DATABASECHANGELOG" />
	</target>

	<target name="testAbsoluteResourceRootsEndsBySlash">
		<db:assertTableDoesntExist driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" table="DATABASECHANGELOG" />
		<lb:updateDatabase
				resourceRoots="${liquibase.test.ant.basedir}/changelog/"
				changelogfile="simple-changelog.xml">
			<lb:database refid="test-db" />
		</lb:updateDatabase>
		<db:assertTableExists driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" table="DATABASECHANGELOG" />
	</target>

	<target name="testAbsoluteResourceRootsMixSlashAndBackslash">
		<db:assertTableDoesntExist driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" table="DATABASECHANGELOG" />
		<lb:updateDatabase
				resourceRoots="${liquibase.test.ant.basedir}\changelog\"
				changelogfile="simple-changelog.xml">
			<lb:database refid="test-db" />
		</lb:updateDatabase>
		<db:assertTableExists driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" table="DATABASECHANGELOG" />
	</target>

	<target name="testRelativeResourceRoots">
		<db:assertTableDoesntExist driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" table="DATABASECHANGELOG" />
		<lb:updateDatabase
				resourceRoots="src/test/resources/liquibase/integration/ant/changelog"
				changelogfile="simple-changelog.xml">
			<lb:database refid="test-db" />
		</lb:updateDatabase>
		<db:assertTableExists driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" table="DATABASECHANGELOG" />
	</target>

	<target name="testRelativeResourceRootsStartsWithSlash">
        <au:expectfailure expectedmessage="Unable to update database: The file simple-changelog.xml was not found">
			<lb:updateDatabase
					resourceRoots="/src/test/resources/liquibase/integration/ant/changelog"
					changelogfile="simple-changelog.xml">
				<lb:database refid="test-db" />
			</lb:updateDatabase>
		</au:expectfailure>
	</target>

	<target name="testRelativeResourceRootsEndsBySlash">
		<db:assertTableDoesntExist driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" table="DATABASECHANGELOG" />
		<lb:updateDatabase
				resourceRoots="src/test/resources/liquibase/integration/ant/changelog/"
				changelogfile="simple-changelog.xml">
			<lb:database refid="test-db" />
		</lb:updateDatabase>
		<db:assertTableExists driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" table="DATABASECHANGELOG" />
	</target>

	<target name="testRelativeBackslashedResourceRoots">
		<db:assertTableDoesntExist driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" table="DATABASECHANGELOG" />
		<lb:updateDatabase
				resourceRoots="src\test\resources\liquibase\integration\ant\changelog"
				changelogfile="simple-changelog.xml">
			<lb:database refid="test-db" />
		</lb:updateDatabase>
		<db:assertTableExists driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" table="DATABASECHANGELOG" />
	</target>

	<target name="testRelativeBackslashedResourceRootsStartsWithBackslash">
        <au:expectfailure expectedmessage="Unable to update database: The file simple-changelog.xml was not found">
			<lb:updateDatabase
					resourceRoots="\src\test\resources\liquibase\integration\ant\changelog"
					changelogfile="simple-changelog.xml">
				<lb:database refid="test-db" />
			</lb:updateDatabase>
        </au:expectfailure>
	</target>

	<target name="testRelativeBackslashedResourceRootsEndsByBackslash">
		<db:assertTableDoesntExist driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" table="DATABASECHANGELOG" />
		<lb:updateDatabase
				resourceRoots="src\test\resources\liquibase\integration\ant\changelog\"
				changelogfile="simple-changelog.xml">
			<lb:database refid="test-db" />
		</lb:updateDatabase>
		<db:assertTableExists driver="${jdbc.driver}" url="${jdbc.url}" user="${db.user}" password="${db.password}" table="DATABASECHANGELOG" />
	</target>
</project>
